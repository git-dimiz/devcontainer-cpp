    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cpp: Debug App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/x64-clang/debug/example",
            "args": [
                "arg1",
                "arg2"
            ],
            "environment": [
                {
                    "name": "config",
                    "value": "Debug"
                }
            ],
            "cwd": "${workspaceFolder}",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "Build: Debug"
        }
    ]
}